<UserControl x:Class="JuanLog.Views.AddExerciseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JuanLog.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewmodels="clr-namespace:JuanLog.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AddExerciseViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush SpreadMethod="Pad" MappingMode="RelativeToBoundingBox">
                <GradientStop Color="#242526" Offset="0"/>
                <GradientStop Color="#242526" Offset="0.5"/>
                <GradientStop Color="#461c2c" Offset="3"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:Card Grid.Row="1" Grid.Column="1" Grid.RowSpan="6" Margin="0, 10, 0, 10" VerticalAlignment="Stretch" BorderBrush="#FFB52395" Background="#FF1D1E1F" ></ui:Card>

        
        <Button Grid.Column="0" Grid.Row="0" Content="Zpět" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="93" Command="{Binding ToHomepageCommand}" />
        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Přidat cvičení" VerticalAlignment="Center" Width="321" FontSize="48" FontFamily="Constantia" TextDecorations="Underline" FontWeight="Bold" Foreground="White"/>

        <Label Grid.Column="1" Grid.Row="2" Margin="25,0,25,0" HorizontalAlignment="Left" VerticalAlignment="Top" ClipToBounds="True" Content="Vyber si kategorii:" FontSize="16"/>
        <ComboBox Grid.Column="1" Grid.Row="2" Margin="25,0,25,0" VerticalAlignment="Center" DisplayMemberPath="ExerciseName" ClipToBounds="True" SelectedItem="{Binding SelectedExercise}" SelectedIndex="0" ItemsSource="{Binding Exercises}" UseLayoutRounding="False"/>

        <Label Grid.Column="1" Grid.Row="3" Margin="25,0,25,0" Content="Přidaná váha:" VerticalAlignment="Top" ClipToBounds="True" FontSize="16"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="25,0,25,0" HorizontalAlignment="Stretch" ClipToBounds="True" TextWrapping="Wrap" Text="{Binding Weight}" VerticalAlignment="Center" />

        <Label Grid.Column="1" Grid.Row="4" Margin="25,0,25,0" Content="Tvoje sety:" ClipToBounds="True" VerticalAlignment="Top" FontSize="16"/>
        <ItemsControl  Grid.Column="1" Grid.Row="4" ClipToBounds="True" VerticalAlignment="Center"  ItemsSource="{Binding Repetitions, UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Margin="25,0,25,0" Foreground="White"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>




        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Odstranit poslední set" HorizontalAlignment="Center" VerticalAlignment="Center"  Command="{Binding RemoveLastSetCommand}"  />
            <TextBox Grid.Column="1" Name="SetRepsField" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center"  Text="{Binding CurrentSet}"/>
            <Button Grid.Column="2" Content="Přidat set" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding AddSetCommand}"/>

        </Grid>

        <Button Grid.Column="1" Grid.Row="6" Content="Přidat" VerticalAlignment="Center" HorizontalAlignment="Center" Width="136" Command="{Binding AddExerciseEntryCommand}"/>

    </Grid>
</UserControl>
