<UserControl x:Class="JuanLog.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JuanLog.Views"
             xmlns:viewmodels="clr-namespace:JuanLog.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ProgressViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF154852" Offset="0.997"/>
                <GradientStop Color="#FF9DCFD8" Offset="0"/>
                <GradientStop Color="#FE4ECAE2" Offset="0.515"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Height="60" Margin="0,70,0,0" TextWrapping="Wrap" Text="Tvůj progres" VerticalAlignment="Top" Width="292" FontSize="48" FontFamily="Constantia" TextDecorations="Underline" FontWeight="Bold"/>

        <Button Content="Zpět" HorizontalAlignment="Left" Height="21" Margin="26,32,0,0" VerticalAlignment="Top" Width="93" Command="{Binding ToHomepageCommandCommand}"/>
        <TextBlock HorizontalAlignment="Center" Height="60" Margin="0,70,0,0" TextWrapping="Wrap" Text="Tvůj progres" VerticalAlignment="Top" Width="292" FontSize="48" FontFamily="Constantia" TextDecorations="Underline" FontWeight="Bold"/>
        
        <TabControl HorizontalAlignment="Stretch"  Margin="30,130,30, 20" VerticalAlignment="Stretch">
            <TabItem Header="Grafík">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Tabulka">

                <DataGrid Background="Pink" ItemsSource="{Binding ExerciseEntries}" AutoGenerateColumns="False" ClipToBounds="True" IsReadOnly="True" HorizontalContentAlignment="Stretch" FontSize="14">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cvičení"  Binding="{Binding ExerciseName}" Width="*"/>
                        <DataGridTextColumn Header="Kdy"  Binding="{Binding When}" Width="*"/>
                        <DataGridTextColumn Header="Váha"  Binding="{Binding Weight}" Width="*"/>
                        <DataGridTextColumn Header="Kdo"  Binding="{Binding UserId}" Width="*"/>
                    </DataGrid.Columns>

                </DataGrid>
                
               
                
            </TabItem>
            
        </TabControl>

    </Grid>
</UserControl>
